&& echo ‘post-receive: building…’ \
# && npm run build \
echo ‘post-receive: → done.’ \
&& (pm2 delete ‘sfrserver’ || true) \
&& pm2 start npm --name ‘sfrserver’ -- start \
&& echo ‘post-receive: app started successfully with pm2.
